{
  "env": {
    "browser": true,
    "es6": true,
    "jest": true
  },
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "module"
  },
  "extends": ["airbnb-base", "plugin:react/recommended", "airbnb-base"],
  "rules": {
    "no-shadow": "off",
    "no-param-reassign": "off",
    "eol-last": "off",
    "linebreak-style": 0,
    "react/prop-types": "off",
    "react/no-unescaped-entities": "off"
  },
  "ignorePatterns": [
    "dist/",
    "build/"
  ]
}